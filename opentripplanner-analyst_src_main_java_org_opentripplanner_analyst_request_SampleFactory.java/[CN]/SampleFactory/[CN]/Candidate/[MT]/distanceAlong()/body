{
  CoordinateSequence cs=((LineString)(edge.getGeometry())).getCoordinateSequence();
  double dist=0;
  double x0=cs.getX(0);
  double y0=cs.getY(0);
  for (int s=1; s < seg; s++) {
    double x1=cs.getX(s);
    double y1=cs.getY(s);
    dist+=distanceLibrary.fastDistance(y0,x0,y1,x1);
    x0=x1;
    y0=y1;
  }
  dist+=distanceLibrary.fastDistance(y0,x0,y,x);
  return dist;
}
