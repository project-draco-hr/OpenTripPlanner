{
  fill(240,240,240);
  drawVertex(v,8);
  s+=" " + shortDateFormat.format(new Date(v.state.getTime()));
  s+=" [" + (int)v.weightSum + "]";
  double x=toScreenX(v.getX()) + 10;
  double y=toScreenY(v.getY());
  double dy=y - lastLabelY;
  if (dy == 0) {
    y=lastLabelY + 20;
  }
 else   if (Math.abs(dy) < 20) {
    y=lastLabelY + Math.signum(dy) * 20;
  }
  text(s,(float)x,(float)y);
  lastLabelY=y;
}
