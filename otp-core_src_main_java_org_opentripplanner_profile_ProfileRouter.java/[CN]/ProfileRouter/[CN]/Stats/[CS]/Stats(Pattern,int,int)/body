{
  min=Integer.MAX_VALUE;
  num=0;
  for (  TripTimes tripTimes : pattern.backingPattern.getScheduledTimetable().getTripTimes()) {
    int depart=tripTimes.getDepartureTime(hop0);
    int arrive=tripTimes.getArrivalTime(hop1);
    int t=arrive - depart;
    if (t < min)     min=t;
    if (t > max)     max=t;
    avg+=t;
    ++num;
  }
  avg/=num;
}
