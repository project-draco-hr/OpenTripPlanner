{
  try {
    OTPService.Processor<OTPServiceImpl> processor=new OTPService.Processor<OTPServiceImpl>(handler);
    TServerTransport serverTransport=new TServerSocket(port);
    TSimpleServer.Args args=new TSimpleServer.Args(serverTransport).processor(processor);
    TServer server=new TSimpleServer(args);
    LOG.info("Starting the OTPService on port {}",port);
    server.serve();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
