{
  OTPMain main=new OTPMain();
  JCommander jc=new JCommander(main,args);
  if (main.help) {
    jc.usage();
    System.exit(0);
  }
  while (true) {
    try {
      main.run();
      return;
    }
 catch (    Throwable throwable) {
      LOG.error("An uncaught " + throwable.getClass().getSimpleName() + " occurred inside OTP. Restarting server.",throwable);
    }
  }
}
